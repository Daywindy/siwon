<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/showNaturalSpotsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="자연명소" />

        <Button
            android:id="@+id/showTouristSpotsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="관광지" />

        <Button
            android:id="@+id/showCulturalFacilitiesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="문화시설" />

        <Button
            android:id="@+id/showCurrentLocationButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="현재위치" />

        <Button
            android:id="@+id/showRecommendedCoursesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="코스추천" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/buttonsContainer"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <!-- Google 지도 Fragment -->
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/recommendedCoursesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:visibility="gone">

        <Button
            android:id="@+id/showFamilyCourseButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="가족 코스" />

        <Button
            android:id="@+id/showChildFamilyCourseButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="아동 코스" />

        <Button
            android:id="@+id/showDateCourseButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="연인 코스" />

        <!-- 추가된 이전으로 돌아가는 버튼 -->
        <Button
            android:id="@+id/recommendCourseBackButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="이전"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonsContainer"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/touristSpotsContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">

            <!-- Google 지도 Fragment (2/3 영역) -->
            <fragment
                android:id="@+id/touristSpotsMap"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <!-- 장소 목록 (1/3 영역) -->
            <ListView
                android:id="@+id/placeListView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:padding="16dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/naturalAttractionsContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">

            <!-- Google 지도 Fragment (2/3 영역) -->
            <fragment
                android:id="@+id/naturalAttractionsMap"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <!-- 장소 목록 (1/3 영역) -->
            <ListView
                android:id="@+id/naturalAttractionsListView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:padding="16dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/culturalFacilitiesContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">

            <!-- Google 지도 Fragment (2/3 영역) -->
            <fragment
                android:id="@+id/culturalFacilitiesMap"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <!-- 장소 목록 (1/3 영역) -->
            <ListView
                android:id="@+id/culturalFacilitiesListView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:padding="16dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/currentLocationContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">

            <!-- Google 지도 Fragment -->
            <fragment
                android:id="@+id/currentLocationMap"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/recommendedCoursesContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">

            <!-- 가족 코스 Fragment -->
            <fragment
                android:id="@+id/familyCourseFragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- 아동 코스 Fragment -->
            <fragment
                android:id="@+id/childFamilyCourseFragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- 연인 코스 Fragment -->
            <fragment
                android:id="@+id/dateCourseFragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
