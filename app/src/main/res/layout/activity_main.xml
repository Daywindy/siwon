<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Buttons (Main Screen) -->
    <LinearLayout
        android:id="@+id/topButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:padding="16dp">

        <Button
            android:id="@+id/btnCulturalFacilities"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="문화시설" />

        <Button
            android:id="@+id/btnTouristAttractions"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="관광지" />

        <Button
            android:id="@+id/btnNaturalSites"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="자연명소" />

        <Button
            android:id="@+id/btnFamilyCourse"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="가족코스" />

        <Button
            android:id="@+id/btnCoupleCourse"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="연인코스" />

        <Button
            android:id="@+id/btnChildFamilyCourse"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="아동가족코스" />
    </LinearLayout>

    <!-- Bottom Buttons (Main Screen) -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="16dp">

        <Button
            android:id="@+id/btnRealTimeLocation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="실시간 위치" />

        <Button
            android:id="@+id/btnRecommendCourse"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="추천코스" />

        <Button
            android:id="@+id/btnBackToMainMap"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="메인 지도로 돌아가기"
            android:visibility="gone" />

        <!-- ... (Existing buttons) -->

    </LinearLayout>

    <!-- Buttons Container for Name and Category TextViews -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/categoryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Map Container (Visible by default) -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_below="@id/topButtons"
        android:layout_above="@id/bottomButtons"
        android:visibility="visible">

        <!-- ... (Existing map fragment) -->

    </FrameLayout>

    <!-- ScrollView and ListView for Place List (Initially hidden) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/topButtons"
        android:layout_above="@id/bottomButtons"
        android:visibility="gone">

        <ListView
            android:id="@+id/placeListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"/>
    </ScrollView>

    <!-- Family Course Container (Initially hidden) -->
    <FrameLayout
        android:id="@+id/familyCourseContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_below="@id/topButtons"
        android:layout_above="@id/bottomButtons"
        android:visibility="gone">

        <!-- ... (Existing family course buttons) -->

    </FrameLayout>

    <!-- Couple Course Container (Initially hidden) -->
    <FrameLayout
        android:id="@+id/coupleCourseContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_below="@id/topButtons"
        android:layout_above="@id/bottomButtons"
        android:visibility="gone">

        <!-- ... (Existing couple course buttons) -->

    </FrameLayout>

    <!-- Child Family Course Container (Initially hidden) -->
    <FrameLayout
        android:id="@+id/childFamilyCourseContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_below="@id/topButtons"
        android:layout_above="@id/bottomButtons"
        android:visibility="gone">

        <!-- ... (Existing child family course buttons) -->

    </FrameLayout>

</RelativeLayout>
